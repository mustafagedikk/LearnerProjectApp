@using EntityLayer.Entities
@model List<About>

<div class="untree_co-section">
    <div class="container">
        @foreach (var item in Model)
        {


        <div class="row justify-content-between">
            <div class="col-lg-5 mb-5">
                <h2 class="line-bottom mb-4" data-aos="fade-up" data-aos-delay="0">@item.Title</h2>
                <p data-aos="fade-up" data-aos-delay="100">@item.Description</p>
                <ul class="list-unstyled ul-check mb-5 primary" data-aos="fade-up" data-aos-delay="200">
                    <li>@item.Item1</li>
                    <li>@item.Item2</li>
                    <li>@item.Item3</li>
                </ul>

                <div class="row count-numbers mb-5">
                    <div class="col-4 col-lg-4" data-aos="fade-up" data-aos-delay="0">
                        <span class="counter d-block"><span data-number="@ViewBag.studentcount">0</span><span>+</span></span>
                        <span class="caption-2">Kayıtlı Öğrenci</span>
                    </div>
                    <div class="col-4 col-lg-4" data-aos="fade-up" data-aos-delay="100">
                        <span class="counter d-block"><span data-number="@ViewBag.educatorcount">0</span><span></span></span>
                        <span class="caption-2">Eğitmen</span>
                    </div>
                    <div class="col-4 col-lg-4" data-aos="fade-up" data-aos-delay="100">
                        <span class="counter d-block"><span data-number="@ViewBag.coursecount">0</span><span></span></span>
                        <span class="caption-2">Kurs</span>
                    </div>
                </div>

                <p data-aos="fade-up" data-aos-delay="200">
                    <a href="#" class="btn btn-primary mr-1">Admission</a>
                    <a href="#" class="btn btn-outline-primary">Learn More</a>
                </p>
            </div>
            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="400">
                <div class="bg-1"></div>
                <a href="https://vimeo.com/342333493" data-fancybox class="video-wrap">
                    <span class="play-wrap"><span class="icon-play"></span></span>
                    <img src="@item.ImageUrl" alt="Image" class="img-fluid rounded">
                </a>
            </div>
        </div>
        }
    </div>
</div> <!-- /.untree_co-section -->
