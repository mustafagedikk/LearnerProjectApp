@using EntityLayer.Entities
@using LearnerProjectApp.Models
@model Tuple<List<Category>, List<CourseCategoryCountViewModel>>
<div class="untree_co-section">
    <div class="container">
        <div class="row justify-content-center mb-3">
            <div class="col-lg-7 text-center" data-aos="fade-up" data-aos-delay="0">
                <h2 class="line-bottom text-center mb-4">Kategorileri Görüntüle</h2>
            </div>
        </div>
        <div class="row align-items-stretch">
            @foreach (var item in Model.Item1)
            {
                var categorycount = Model.Item2.FirstOrDefault(r => r.categoryid == item.CategoryId);

                <div class="col-sm-6 col-md-6 col-lg-3 mb-4" data-aos="fade-up" data-aos-delay="0">
                    <a href="#" class="category d-flex align-items-start h-100">
                        <div>
                            <i class="@item.Icon"></i>
                        </div>
                        <div>
                            <h3>@item.CategoryName</h3>
                            <span>@(categorycount != null ? categorycount.Coursecount.ToString() : "Kategoriye ait kurs bulunmamaktadır")</span>


                        </div>
                    </a>
                </div>
            }


        </div>

        <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="400">
            <div class="col-lg-8 text-center">
                <p> <a href="#">Tüm Kategorileri Görüntüle</a></p>
            </div>
        </div>
    </div>
</div>